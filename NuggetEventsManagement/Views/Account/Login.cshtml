@using NuggetEventsManagement.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="jumbotron Jumbo_Bacground justify-content-center text-center">


    <img src="~/Images/Untitled-1.png" height="100" width="300" class="img-fluid justify-content-center text-center" />
    <div class="container" style="padding-top:10px;">
       
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <hr />
                        <div class="form-row justify-content-center">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email Address", style = "margin:5px;" })
                        </div>
                        <div class="form-row justify-content-center">
                            @if (!ViewData.ModelState.IsValidField(nameof(Model.Email)))
                            {
                                <div class="container text-center text-secondary font-weight-light" style="font-family:'Montserrat'">
                                    <i class="fa fa-warning text-danger"></i>  @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger font-weight-bold " })
                                </div>
                            }
                        </div>

                        <div class="form-row justify-content-center">
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password", style = "margin:5px;" })
                        </div>
                        <div class="form-row justify-content-center">
                            @if (!ViewData.ModelState.IsValidField(nameof(Model.Password)))
                            {
                                <div class="container text-center text-secondary font-weight-light" style="font-family:'Montserrat'">
                                    <i class="fa fa-warning text-danger"></i>  @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger font-weight-bold " })
                                </div>
                            }
                        </div>
                        <div class="form-row justify-content-center text-center">
                            <div class="text-center text-white" >
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>

                        </div>
                        <div class="container justify-content-center">
                            <button class="btn  w-25 btn-primary font-weight-bold" type="submit" value="Log In" role="button"> Login </button>
                            <p style="font-family:Montserrat">
                                @Html.ActionLink("Register as a new user", "Register", routeValues: null, htmlAttributes: new { @class = "font-weight bold text-warning" })
                            </p>
                            <p style="font-family:Montserrat">
                                @Html.ActionLink("Forgot your password?", "ForgotPassword", routeValues: null, htmlAttributes: new { @class = "font-weight bold text-warning" })
                            </p>
                            <i class="fa fa-facebook text-white " style="font-size:18px;"></i>
                            <i class="fa fa-twitter text-white " style="font-size:18px;"></i>
                            <i class="fa fa-google text-white " style="font-size:18px;"></i>

                        </div>


                    }
                
            
            @*<div class="col-md-4">
                <section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                </section>
            </div>*@
        </div>
        </div>
    

